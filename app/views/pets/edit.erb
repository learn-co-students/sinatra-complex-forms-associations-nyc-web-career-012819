<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <p>Pet Name:</p>
  <p><input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"></p>

  <p>Choose An Existing Owner:</p>
  <p><% @owners.each do |owner| %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= "checked" if @pet.owner.eql?(owner) %>><%= owner.name %></input>
    <% end %>
  </p>

  <h4>Or Create a New Owner: (This Will Override Your Selection Above)</h4>
  <p>Owner Name:</p>
  <p><input type="text" name="owner[name]" id="owner_name"></p>

  <input type="submit" value="Update Pet">
</form>